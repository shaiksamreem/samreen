import java.util.Scanner;
class bevereagemenu{
	public static void main(String args[])
	{
	Scanner sc=new Scanner(System.in);
	int choice;
	do{
	System.out.println("welcome to the beveragemenu:");
	System.out.println("enetr 1:tea");
	System.out.println("enter 2:coffee");
	System.out.println("enter 3:other beverages");
	System.out.println("enter 4:exit");
	System.out.println("enter your choice:");
	choice=sc.nextInt();
	switch(choice){
	case 1:
	System.out.println("you have tea");
	break;
	case 2:
	System.out.println("you have coffee");
	case 3:
	System.out.println("you have other beverages");
	case 4:
	System.out.println("your exit");
	default:
	System.out.println("invalid exit a menu");
	}
	}while(choice!=4);

	}
}
